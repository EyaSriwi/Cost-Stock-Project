{% block body %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Itap Login Page | CodingNepal</title>
        <link rel="stylesheet" href="{{ asset('assetsFrontOffice/css/sign.css') }}">
