    <div class="form-wrapper">
        <h2>Sign Up</h2>
        <form action="#">
            <div class="form-control">
                <input type="text" required>
                <label>Full Name</label>
            </div>
            <div class="form-control">
                <input type="text" required>
                <label>Email Address</label>
            </div>
